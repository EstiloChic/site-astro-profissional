    <script is:inline>
        AOS.init({ duration: 800, once: true, delay: 100, anchorPlacement: 'top-bottom' });

        document.addEventListener('DOMContentLoaded', () => {
            const backToTopButton = document.getElementById('back-to-top');
            if (backToTopButton) {
                window.addEventListener('scroll', () => {
                    if (window.scrollY > 300) {
                        backToTopButton.classList.add('show');
                    } else {
                        backToTopButton.classList.remove('show');
                    }
                });
            }

            const mobileMenuToggle = document.getElementById('mobile-menu-toggle');
            const mobileNavContainer = document.getElementById('mobile-nav-container');
            if (mobileMenuToggle && mobileNavContainer) {
                const closeMobileMenu = () => document.body.classList.remove('mobile-menu-open');
                mobileMenuToggle.addEventListener('click', (e) => { e.stopPropagation(); document.body.classList.toggle('mobile-menu-open'); });
                mobileNavContainer.querySelectorAll('a').forEach(link => link.addEventListener('click', closeMobileMenu));
                document.addEventListener('click', (e) => {
                    if (document.body.classList.contains('mobile-menu-open') && !mobileNavContainer.contains(e.target) && !mobileMenuToggle.contains(e.target)) {
                        closeMobileMenu();
                    }
                });
            }

            const htmlElement = document.documentElement;
            const langData = {
                pt: { title: 'Enrique Enguix - SoluÃ§Ãµes de Trading Quantitativo' },
                es: { title: 'Enrique Enguix - Soluciones de Trading Cuantitativo' },
                en: { title: 'Enrique Enguix - Quantitative Trading Solutions' }
            };
            const setLanguage = (lang) => {
                if (!langData[lang] || !htmlElement) return;
                const isMenuOpen = document.body.classList.contains('mobile-menu-open');
                document.body.className = Array.from(document.body.classList).filter(c => !c.startsWith('lang-active-')).join(' ');
                document.body.classList.add(`lang-active-${lang}`);
                if (isMenuOpen) document.body.classList.add('mobile-menu-open');
                htmlElement.setAttribute('lang', lang);
                document.title = langData[lang].title;
                localStorage.setItem('language', lang);
            };
            const setupLanguageSwitcher = (toggleBtnId, menuId) => {
                const toggleButton = document.getElementById(toggleBtnId);
                const languageMenu = document.getElementById(menuId);
                if (!toggleButton || !languageMenu) return;
                toggleButton.addEventListener('click', (e) => { e.stopPropagation(); languageMenu.classList.toggle('show'); });
                languageMenu.addEventListener('click', (e) => {
                    const button = e.target.closest('button');
                    if (button && button.dataset.lang) {
                        setLanguage(button.dataset.lang);
                        languageMenu.classList.remove('show');
                    }
                });
            };
            setupLanguageSwitcher('language-toggle-button', 'language-menu');
            setupLanguageSwitcher('mobile-language-toggle-button', 'mobile-language-menu');
            document.addEventListener('click', (e) => {
                if (!e.target.closest('.language-switcher')) {
                    document.getElementById('language-menu')?.classList.remove('show');
                    document.getElementById('mobile-language-menu')?.classList.remove('show');
                }
            });
            const savedLang = localStorage.getItem('language') || 'pt';
            setLanguage(savedLang);

            const mainContent = document.querySelector('.main-content');
            const pageViews = document.querySelector('.page-views');
            if (mainContent && pageViews) {
                const allPageViews = pageViews.querySelectorAll('.page-view');
                const handleNavigation = () => {
                    const hash = window.location.hash.substring(1);
                    const targetView = document.getElementById(hash);
                    window.scrollTo(0, 0);
                    if (targetView && pageViews.contains(targetView)) {
                        mainContent.style.display = 'none';
                        allPageViews.forEach(view => { view.style.display = 'none'; });
                        targetView.style.display = 'block';
                    } else {
                        mainContent.style.display = 'block';
                        allPageViews.forEach(view => { view.style.display = 'none'; });
                        if (hash && hash !== 'inicio') {
                            const mainSection = document.getElementById(hash);
                            if (mainSection) {
                                setTimeout(() => mainSection.scrollIntoView({ behavior: 'smooth' }), 0);
                            }
                        }
                    }
                };
                window.addEventListener('hashchange', handleNavigation);
                handleNavigation();
            }

            const blogTabsContainer = document.querySelector('.blog-tabs');
            if (blogTabsContainer) {
                const tabButtons = blogTabsContainer.querySelectorAll('.tab-button');
                const tabContents = document.querySelectorAll('.tab-content');
                if(tabButtons.length > 0 && tabContents.length > 0){
                    tabButtons.forEach(button => {
                        button.addEventListener('click', () => {
                            tabButtons.forEach(btn => btn.classList.remove('active'));
                            tabContents.forEach(content => content.classList.remove('active'));
                            button.classList.add('active');
                            const contentToShow = document.getElementById(`tab-${button.dataset.tab}`);
                            if(contentToShow) contentToShow.classList.add('active');
                        });
                    });
                }
            }
            
            const contactOptionsContainer = document.querySelector('.contact-options');
            if (contactOptionsContainer) {
                const contactButtons = contactOptionsContainer.querySelectorAll('.tab-button');
                const contactDetails = document.querySelectorAll('.contact-details');
                if(contactButtons.length > 0 && contactDetails.length > 0){
                    contactButtons.forEach(button => {
                        button.addEventListener('click', () => {
                            contactButtons.forEach(btn => btn.classList.remove('active'));
                            contactDetails.forEach(detail => detail.classList.remove('active'));
                            button.classList.add('active');
                            const detailToShow = document.getElementById(`contact-${button.dataset.contact}`);
                            if(detailToShow) detailToShow.classList.add('active');
                        });
                    });
                }
            }
        });
